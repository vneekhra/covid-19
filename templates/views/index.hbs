<!DOCTYPE html>
<html lang="en">

{{>header}}

<body>
  <div class='main-content'>

    {{>nav}}

    <div class="container-fluid">
      <div id="covidCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#covidCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#covidCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <img src="/img/img3.jpeg" alt="Covid-19" style="width:100%; height:420px;">
            <div class="carousel-caption">
              <h3>#StayHomeSaveLives</h3>
              <p>Stay Home Stay Safe</p>
            </div>
          </div>

          <div class="item">
            <img src="img/img1.jpeg" alt="Covid-19" style="width:100%;  height:420px;">
            <div class="carousel-caption">
              <h3>#StayHomeSaveLives</h3>
              <p>Stay Home Stay Safe</p>
            </div>
          </div>


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#covidCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#covidCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="container-fluid">
      <div class="alert alert-info">
        <div class="text-center">
          <h2 class="h2">COVID-19 Update</h2>
        </div>
      </div>

      <div class="row" style="padding: 0 15%;">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <div class="row mb-3">
                <div class="col-md-12">
                  <h1 class="title h1 text-center">Globally</h1>
                  <h3 class="h6 text-muted text-center">
                    <script language="javascript">
                      var today = new Date();
                      document.write('Last Update at ' + today);
                    </script>
                  </h3>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-center text-danger">

              <div class="panel panel-default panel-danger">
                <div class="panel-heading">
                  <h3 class="panel-title">Confirmed</h3>
                </div>
                <div class="panel-body">
                  <h2 class="h1 mb-0 text-responsive">
                    <p id="message-2"></p>
                  </h2>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-center text-success">
              <div class="panel panel-default panel-success">
                <div class="panel-heading">
                  <h3 class="panel-title">Recovered</h3>
                </div>
                <div class="panel-body">
                  <h2 class="h1 mb-0 text-responsive">
                    <p id="message-6"></p>
                  </h2>
                </div>
              </div>
            </div>

            <div class="col-md-4  text-center text-warning">

              <div class="panel panel-default panel-warning">
                <div class="panel-heading">
                  <h3 class="panel-title">Deaths</h3>
                </div>
                <div class="panel-body">
                  <h2 class="h1 mb-0 text-responsive">
                    <p id="message-4"></p>
                  </h2>
                </div>
              </div>
            </div>
          </div>

          
        </div>
      </div>


      <div class="row" style="padding: 0 15%;">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12" style="margin-bottom: 30px;">
              <div class="row mb-3">
                <div class="col-md-12">
                  <h1 class="title h1 text-center">India</h1>
                  <h3 class="h6 text-muted text-center">
                    <script language="javascript">
                      var today = new Date();
                      document.write('Last Update at ' + today);
                    </script>
                  </h3>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-center text-danger">

              <div class="panel panel-default panel-danger">
                <div class="panel-heading">
                  <h3 class="panel-title">Confirmed</h3>
                </div>
                <div class="panel-body">
                  <h2 class="h1 mb-0 text-responsive">
                    <p id="message_2"></p>
                  </h2>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-center text-success">
              <div class="panel panel-default panel-success">
                <div class="panel-heading">
                  <h3 class="panel-title">Recovered</h3>
                </div>
                <div class="panel-body">
                  <h2 class="h1 mb-0 text-responsive">
                    <p id="message_6"></p>
                  </h2>
                </div>
              </div>
            </div>

            <div class="col-md-4  text-center text-warning">

              <div class="panel panel-default panel-warning">
                <div class="panel-heading">
                  <h3 class="panel-title">Deaths</h3>
                </div>
                <div class="panel-body">
                  <h2 class="h1 mb-0 text-responsive">
                    <p id="message_4"></p>
                  </h2>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="alert alert-info" style="">
        <div class="text-center">
          <h2 class="h2">Statewise Details</h2>
          <h3 class="h6 text-muted text-center">
            <script language="javascript">
              var today = new Date();
              document.write('Last Update at ' + today);
            </script>
          </h3>
        </div>
      </div>

      <div class="row">
        <div style="background:#f8f8f8;padding: 40px 0">
          <div class="col-sm-6">
            <div class="col-sm-12">
              <table class="table table-responsive" id="stateWiseData">
                <thead>
                  <tr>
                    <th>State</th>
                    <th>Confirmed</th>
                    <th>Active</th>
                    <th>Recovered</th>
                    <th>Deaths</th>
                  </tr>
                </thead>
                <tbody>

                </tbody>
              </table>

            </div>
          </div>

          <div class="col-sm-6" <style = "background:#f8f8f8; ">
            <h3  class="text-center" style="margin-top:-20px;">Total Cases</h3>
            <canvas id="chartView" width="400" height="240"></canvas>
            <h3  class="text-center" style="margin-top:20px;">Worst affected State</h3>
            <canvas id="chartView_state" width="400" height="240"></canvas>
              <h3  class="text-center" style="margin:40px;">Percentage View</h3>
            <canvas id="chartView_pieChart" width="" height="160"></canvas>
             
          </div>

          <div class="col-sm-12" style="padding:0 15%">
              <h3  class="text-center" style="margin:40px 0;">Daily Confirmed vs Recovered vs Deaths Cases across India </h3>
              <canvas id="timeViewChart" height="120"></canvas>
            </div>

      </div>
        </div>

  </div>

  </div>
  </div>
  <script src="/js/app.js"></script>

  <style>
    table thead{background-color: #34495e; border: 2px solid #34495e; color:#fff; border-bottom: 0px;}
    table tr td:nth-child(2) {
      background-color: #dc3545;
      color:#fff
    }

    table tr td:nth-child(3) {
      background-color: #17a2b8;
      color:#fff
    }

    table tr td:nth-child(4) {
      background-color: #28a745;
      color:#fff
    }

    table tr td:nth-child(5) {
      background-color: #ffc107;
      color:#fff
    }

    table tbody tr:nth-child(1), .amcharts-chart-div a[title="Interactive JavaScript maps"]{
      display: none !important;
    }
    .panel-danger>.panel-heading {
      color: #fff;
      background-color: #dc3545;
      border-color: #dc3545;
      
    }
    .panel-danger {
      border-color: #dc3545;
      background: #f8f8f8;
      color:#dc3545;
    }
    
     .panel-success>.panel-heading {
      color: #fff;
      background-color: #28a745;
      border-color: #28a745;
      
    }
    .panel-success {
      border-color: #28a745;
      background: #f8f8f8;
      color:#28a745;
    }

     .panel-warning>.panel-heading {
      color: #fff;
      background-color: #ffc107;
      border-color: #ffc107;
      
    }
    .panel-warning {
      border-color: #ffc107;
      background: #f8f8f8;
      color:#ffc107;
    }

  </style>
</body>
{{>footer}}

</html>