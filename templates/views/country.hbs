<!DOCTYPE html>
<html>
{{>header}}

<body>
  <div class='main-content'>
    {{>nav}}

    <div class="container-fluid">
      <div id="covidCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#covidCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#covidCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <img src="/img/img2.jpeg" alt="Covid-19" style="width:100%; height:420px;">
            <div class="carousel-caption">
              <h3>#StayHomeSaveLives</h3>
              <p>Stay Home Stay Safe</p>
            </div>
          </div>

          <div class="item">
            <img src="/img/img1.jpeg" alt="Covid-19" style="width:100%;  height:420px;">
            <div class="carousel-caption">
              <h3>#StayHomeSaveLives</h3>
              <p>Stay Home Stay Safe</p>
            </div>
          </div>


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#covidCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#covidCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="container-fluid">
      <div class="alert alert-info" style="margin-top:20px;">
        <div class="text-center">
          <h3 class="h3">COVID-19 Global Updates</h3>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="row" style="margin:25px 0;">
            <div class="col-md-2 text-center">
              <form>
                <div class="form-group">
                  <div class="panel panel-default">
                    <div class="panel-heading" style="color:#31708f;">
                      <h3 class="panel-title">Select County</h3>
                    </div>
                  </div>

                  <select class="form-control" id="country-input"></select>
                  <br>
                </div>
              </form>
            </div>
            <div class="col-md-6 text-center">

              <div class="col-md-3 text-center text-danger">

                <div class="panel panel-default panel-danger">
                  <div class="panel-heading">
                    <h3 class="panel-title">Confirmed</h3>
                  </div>
                  <div class="panel-body">
                    <h3 class="h3 mb-0">
                      <p id="message-2"></p>
                    </h3>
                  </div>
                </div>
              </div>
              <div class="col-md-3 text-center text-success">
                <div class="panel panel-default panel-success">
                  <div class="panel-heading">
                    <h3 class="panel-title">Recovered</h3>
                  </div>
                  <div class="panel-body">
                    <h3 class="h3 mb-0">
                      <p id="message-6"></p>
                    </h3>
                  </div>
                </div>
              </div>

              <div class="col-md-3  text-center text-warning">

                <div class="panel panel-default panel-warning">
                  <div class="panel-heading">
                    <h3 class="panel-title">Deaths</h3>
                  </div>
                  <div class="panel-body">
                    <h3 class="h3 mb-0">
                      <p id="message-4"></p>
                    </h3>
                  </div>
                </div>
              </div>

            </div>
            <div class="col-md-4 text-center text-info">
              <div style="min-height:180px; border:1px solid; margin: 0 auto;">
                <p>Container for Map view.</p>
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/country.js"></script>
</body>
{{>footer}}

</html>